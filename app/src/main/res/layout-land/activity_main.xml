<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:stretchColumns="*"
        android:gravity="fill|fill_vertical">

        <TableRow android:layout_height="fill_parent"
            android:gravity="fill|fill_vertical"
            android:layout_weight="1">
            <EditText
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5pt"
                android:id="@+id/etNum"
                android:layout_width="match_parent"
                android:text="0"
                android:enabled="false"
                android:editable="true"
                android:textAlignment="textEnd"
                android:textSize="42sp"
                android:gravity="bottom|end"
                android:layout_span="3"
                android:maxLines="1"
                android:maxLength="6">
            </EditText>
            <TextView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:textSize="@dimen/abc_text_size_display_3_material"
                android:layout_marginTop="3pt"
                android:id="@+id/tvResult"
                android:gravity="bottom|end"
                android:text="0"
                android:textAlignment="textEnd"
                android:layout_span="4"
                android:maxLength="8"
                android:maxLines="1">
            </TextView>
        </TableRow>

        <TableRow android:orientation="vertical"
            android:layout_height="fill_parent"
            android:gravity="fill|fill_vertical"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="â†"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnBacksp"
                android:textStyle="bold"
                android:layout_span="2">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn1"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn2"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn3"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnAdd"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnSub"
                android:textStyle="bold">
            </Button>
        </TableRow>

        <TableRow android:layout_height="fill_parent"
            android:gravity="fill|fill_vertical"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnClear"
                android:textStyle="bold"
                android:layout_span="2">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn4"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn5"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn6"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnMult"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnDiv"
                android:textStyle="bold">
            </Button>
        </TableRow>
        <TableRow android:layout_height="fill_parent"
            android:gravity="fill|fill_vertical"
            android:layout_weight="1">
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="+/-"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnsign"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btndot"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn7"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn8"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn9"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btn0"
                android:textStyle="bold">
            </Button>
            <Button
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="@dimen/abc_text_size_title_material"
                android:id="@+id/btnEq"
                android:textStyle="bold">
            </Button>
        </TableRow>
    </TableLayout>
</LinearLayout>